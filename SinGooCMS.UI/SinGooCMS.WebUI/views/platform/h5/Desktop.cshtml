@inject SinGooCMS.Domain.Interface.ICMSContext context;

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Frameset//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-frameset.dtd">
<html lang="zh-CN">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>管理登录 - SinGooCMS</title>
    <link rel="stylesheet" type="text/css" href="/include/theme/h5/css/reset.min.css" />
    <link rel="stylesheet" type="text/css" href="/include/theme/h5/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/include/plugin/artDialog/skins/twitter.css" />
    <script type="text/javascript" src="/include/script/jquery.min.js" ></script>
    <script type="text/javascript" src="/include/plugin/artDialog/jquery.artDialog.js"></script>
    <script type="text/javascript" src="/include/plugin/artDialog/plugins/iframeTools.js"></script>
    <script type="text/javascript" src="/include/script/publicfun.js"></script>
    <script type="text/javascript" src="/include/script/manage.js"></script>
</head>
<body>
    <div class="container-fluid outer-box">
        <div class="row">
            <div class="col-xs-12 col-md-9 no-pad">
                <div class="col-xs-12 main-m">
                    <div class="main-item-box plat-h">
                        <h2 class="item-title">
                            平台信息
                        </h2>
                        <div class="m-con clear-fix">
                            <div class="con-title">
                                系统版本最后更新时间:
                            </div>
                            <div class="con-des">
                                @ViewBag.Ver.LastUpdateTime.ToString("yyyy-MM-dd")
                            </div>
                            <div class="con-title">
                                当前版本为：
                            </div>
                            <div class="con-des">
                                @ViewBag.Ver.SoftName
                                @ViewBag.Ver.Ver
                            </div>
                            <div class="con-title">
                                系统.net版本：
                            </div>
                            <div class="con-des">
                                @ViewBag.Ver.Remark
                            </div>
                            <div class="con-title">
                                服务器IP：
                            </div>
                            <div class="con-des">
                                @(context.IP)
                            </div>
                            <div class="con-title">
                                服务器操作系统：
                            </div>
                            <div class="con-des">
                                @(System.Environment.OSVersion.ToString())
                            </div>
                            <div class="con-title">
                                目录物理路径：
                            </div>
                            <div class="con-des">
                                @(SinGooCMS.SinGooBase.BaseDir)
                            </div>
                            <div class="con-title">
                                系统采用技术：
                            </div>
                            <div class="con-des">
                                .net core MVC + EFCore/Ado + Autofac + AutoMapper + @(context.DbProviderName) + 缓存/Redis
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-8 main-m text-c">
                    <div class="main-item-box main-fast-h">
                        @Html.Raw(ViewBag.ExpressButtonHtml)
                    </div>
                </div>
                <div class="col-xs-12 col-md-4 main-s">
                    <div class="main-item-box main-fast-h">
                        <h2 class="item-title text-c mt-15">
                            网站空间使用比例
                        </h2>
                        <div class="use-per">
                            @ViewBag.UsePercent.ToString("f2")%
                        </div>
                        <div class="process-bar">
                            <div class="bar-inter" proce='@(ViewBag.UsePercent.ToString("f2"))%'>
                            </div>
                        </div>
                        <div class="place-percent clear-fix">
                            <div class="place-percent-item">
                                <div>
                                    已使用
                                </div>
                                <h4>
                                    @ViewBag.SiteSize.ToString("f2")
                                    M
                                </h4>
                                <div class="v-line">
                                </div>
                            </div>
                            <div class="place-percent-item">
                                <div>
                                    未使用
                                </div>
                                <h4>
                                    @ViewBag.RemainSize.ToString("f2")
                                    M
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-3 side">
                <div class="main-item-box ">
                    <h2 class="item-title">
                        最新内容
                    </h2>
                    <div class="s-con clear-fix h-side-t">
                        @{
                            if(ViewBag.TopNewCont.Count > 0)
                            {
                                foreach (var item in ViewBag.TopNewCont)
                                {
                                    <a href="/article/detail/@(item.AutoID)" target="_blank" title='@(item.Title)'>
                                        <div class="fl mr-title">
                                            @item.Title
                                        </div>
                                        <div class="info-date fr hide">
                                            @item.AutoTimeStamp
                                        </div>
                                    </a>
                                }
                            }
                            else
                            {
                                <div class="noContent">
                                    <span>暂无内容！</span>
                                </div>
                            }
                        }                        
                    </div>
                </div>
                <div class="main-item-box mt-15">
                    <h2 class="item-title">
                        帮助中心
                    </h2>
                    <div class="s-con clear-fix h-side-b" style="height: 200px;">
                        <a href="http://www.singoo.top/article/detail/186.html" target="_blank">
                            <div class="fl mr-title">
                                网站安装与部署
                            </div>
                        </a>
                        <a href="http://www.singoo.top/article/detail/182.html" target="_blank">
                            <div class="fl mr-title">
                                SinGooCMS(.net core)框架介绍
                            </div>
                        </a>
                        <a href="http://www.singoo.top/article/detail/183.html" target="_blank">
                            <div class="fl mr-title">
                                SinGooCMS(.net core)使用说明
                            </div>
                        </a>
                        <a href="http://www.singoo.top/article/detail/184.html" target="_blank">
                            <div class="fl mr-title">
                                系统服务邮箱配置
                            </div>
                        </a>
                        <a href="http://www.singoo.top/article/detail/178.html" target="_blank">
                            <div class="fl mr-title">
                                阿里云短信申请与配置
                            </div>
                        </a>
                        <a href="http://www.singoo.top/article/detail/179.html" target="_blank">
                            <div class="fl mr-title">
                                腾迅云短信申请与配置
                            </div>
                        </a>
                        <a href="http://www.singoo.top/article/detail/180.html" target="_blank">
                            <div class="fl mr-title">
                                阿里云对象存储(oss)申请与配置
                            </div>
                        </a>
                        <a href="http://www.singoo.top/article/detail/181.html" target="_blank">
                            <div class="fl mr-title">
                                微信公众号对接
                            </div>
                        </a>
                        <a href="http://www.singoo.top/article/detail/185.html" target="_blank">
                            <div class="fl mr-title">
                                SinGooCMS(.net core) 工具集API
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="copy text-c" style="font-size: 12px;">
            Copyright©2012-2021 <a href="http://www.singoo.top" target="_blank">SinGooCMS</a><br />
            如果您有任何建议及合作方式，请联系16826375@qq.com或者致电：17788760902(李先生)
        </div>
    </div>
</body>
</html>
<script src="/include/theme/h5/js/tab-min.js"></script>
<script type="text/javascript">
    //初始化a标签链接到tab
    $(".menu a,.tab-a").tab();

    $(".outer-box").css({ "min-height": $(window).height() + "px" })
    $(".bar-inter").css({ "width": $(".bar-inter").attr("proce") });
</script>