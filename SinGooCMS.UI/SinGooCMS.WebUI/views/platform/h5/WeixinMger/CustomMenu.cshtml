@{
    Layout = "~/views/platform/h5/MasterPage/MasterDefault.cshtml"; //母版页
}

<form method="post" singoo-data-ajax="true" singoo-data-list="true">
    <div class="top-fix clear-fix">
        <div class="clear-fix">
            <ul class="btn-group clear-fix">
                <li>
                    <label class="label-box" for="checkall">
                        <input type="checkbox" class="common-check" id="checkall" />
                        <span></span>全选
                    </label>
                </li>
            </ul>
            <ul class="btn-group clear-fix">
                <li>
                    <a singoo-action="Add" singoo-data-url="/platform/CustomMenu/Edit" singoo-dialog-param="增加菜单|680|430">
                        <i class="iconfont">&#xe611;</i><span>新增</span>
                    </a>
                </li>
                <li>
                    <a singoo-action="LoadFromServer" singoo-data-url="/platform/CustomMenu/LoadFromServer"><i class='iconfont'>&#xe606;</i><span>重新加载</span></a>
                </li>
            </ul>
            <div class="search-box focus-item fr hide">
            </div>
        </div>
    </div>
    <table class="tab-con" style="margin-top: 50px;" id="rowItems">
        <tr class="tab-title">
            <td style="width: 60px;"></td>
            <td>
                菜单名称
            </td>
            <td>
                响应事件
            </td>
            <td style="width: 150px;">
                排序
            </td>
            <td style="width: 80px;">
                操作
            </td>
        </tr>
        <tbody id="singoo-content"></tbody>
        <script id="singoo-template" type="text/html">
            {{#data}}
            <tr>
                <td>
                    <label>
                        <input name="chk" type="checkbox" class="common-check" value="{{AutoID}}" />
                        <span></span>
                    </label>
                    <input type="hidden" name="AutoID" value="{{AutoID}}" />
                </td>
                <td>
                    {{{NameExt}}}
                </td>
                <td class="short-input">
                    {{TypeExt}}
                </td>
                <td class="short-input">
                    <input type="number" name="txtSort" {{#Sort}} value="{{Sort}}" {{/Sort}} {{^Sort}} value="99999" {{/Sort}} id="txtSort" step="1" />
                </td>
                <td>
                    <div class="icon-btn clear-fix">
                        <a class="iconfont" singoo-action="Modify" singoo-data-url="/platform/CustomMenu/Edit" singoo-data-urlext="&opid={{AutoID}}" singoo-dialog-param="编辑菜单|680|430">
                            &#xe67f;<i>编辑</i>
                        </a>
                        <a singoo-action="Delete" singoo-data-id="{{AutoID}}" class="iconfont">&#xe6eb;<i>删除</i></a>
                    </div>
                </td>
            </tr>
            {{/data}}
            {{^data}}
            <tr><td colspan='4'> 没有找到任何数据</td></tr>
            {{/data}}
        </script>
    </table>
    <ul style="margin-top:20px;">
        <li class="btn-box" style="text-align:right">
            <input type="button" singoo-action="SaveToRemote" singoo-data-confirm="更新后将替换现在的微信菜单，确定吗？" value="更新到服务器" id="btnok" class="btn-style sure-btn" />
        </li>
    </ul>    
</form>