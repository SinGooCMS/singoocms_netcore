@{
    Layout = "~/views/platform/h5/MasterPage/MasterDefault.cshtml"; //母版页
}
@model SinGooCMS.Weixin.WXConfig;

<div class="form-box">
    <div class="content-title">
        <h2 class="title">微信公众号配置</h2>
        <blockquote>
            1、在微信公众平台（<a href="https://mp.weixin.qq.com" target="_blank">https://mp.weixin.qq.com</a>）申请公众号<br />
            2、进入开发者中心可查看相关配置项，必须填写一致<br />
            3、要使用微站必须启用服务器配置，服务器地址为：http://您的网址/weixin/api<br />
        </blockquote>
    </div>
    <form singoo-data-ajax="true">
        <ul>
            <li class="form-item clear-fix">
                <div class="form-item-title">
                    应用ID（AppID）：
                </div>
                <div class="form-item-con text-item focus-item">
                    <input name="TextBox1" type="text" value="@(Model.AppID)" maxlength="100" id="TextBox1" required="required" />
                </div>
            </li>
            <li class="form-item clear-fix">
                <div class="form-item-title">
                    应用密钥（AppSecret）：
                </div>
                <div class="form-item-con text-item focus-item">
                    <input name="TextBox2" type="text" value="@(Model.AppSecret)" maxlength="100" id="TextBox2" required="required" />
                </div>
            </li>
            <li class="form-item clear-fix">
                <div class="form-item-title">
                    服务器地址（URL）：
                </div>
                <div class="form-item-con text-item focus-item">
                    <input name="TextBox3" type="text" value="@(Model.URL)" maxlength="255" id="TextBox3" required="required" />
                </div>
            </li>
            <li class="form-item clear-fix">
                <div class="form-item-title">
                    令牌（Token）：
                </div>
                <div class="form-item-con text-item focus-item">
                    <input name="TextBox4" type="text" value="@(Model.Token)" maxlength="100" id="TextBox4" required="required" />
                </div>
            </li>
            <li class="form-item clear-fix">
                <div class="form-item-title">
                    消息加解密密钥（EncodingAESKey）：
                </div>
                <div class="form-item-con text-item focus-item">
                    <input name="TextBox5" type="text" value="@(Model.EncodingAESKey)" maxlength="100" id="TextBox5" required="required" />
                </div>
            </li>
            <li class="form-item clear-fix">
                <div class="form-item-title">
                    每条消息过期时间（ExpireMinutes）：
                </div>
                <div class="form-item-con text-item focus-item">
                    <input type="number" name="TextBox6" value="@(Model.ExpireMinutes)" maxlength="10" id="TextBox6" required="required" />
                </div>
            </li>
            <li class="btn-box">
                <input type="hidden" id="singoo-action" value="Modify" />
                <input type="submit" name="btnok" value="保 存" id="btnok" class="btn-style sure-btn" />
            </li>
        </ul>
    </form>
</div>
